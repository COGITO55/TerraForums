@model TerraForums.Models.Post.NewPostModel

<div class="createPostBody">

<h1 id="createPostHeading">Utwórz nowy post w kategorii: @Model.ForumName</h1>

<form asp-action="AddPost" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="formBtn">
    <button type="submit" id="submitPostBtn" class="btn btn-submitPost">Submit Post</button>
    <input asp-for="ForumId" type="hidden" />
    </div>
</form>

</div>