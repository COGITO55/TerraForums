@using Microsoft.AspNetCore.Identity
@model TerraForums.Models.ApplicationUser.ProfileModel

@inject UserManager<TerraForums.Data.Models.ApplicationUser> UserManager

    <div class="container body-content">
        <div class="row sectionHeader">
            <div class="sectionHeading">
                UserProfile
            </div>
    </div>
    <div class="row userProfile">
        <div class="col-md-4">
            <div id="userProfileImage" style="background-image: url(@Model.ProfileImageUrl)"></div>
            @if (User.Identity.Name == Model.UserName)
            {
                <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="UploadProfileImage">
                    <div id="upload">
                        <label class="btn btn-default btn-file">
                            Wyszukaj obraz <input type="file" name="file" style="display: none;" />
                        </label>
                    </div>
                    <button class="btn btn-default" type="submit" id="btn-profile">Ustaw zdjęcie</button>
                </form>   
            }
        </div>
    </div>
    <div class="col-md-8">
        <span id="userName">@Model.UserName</span>
        @if(Model.IsAdmin)
        {
            <span class="isAdmin">Admin</span>
        }
        <span id="userEmailLabel">E-mail: @Model.Email</span>
        <span id="userCreatedLabel">Profil utworzony: @Model.MemberSince</span>
    </div>
</div>