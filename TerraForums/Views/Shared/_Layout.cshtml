@using Microsoft.AspNetCore.Identity
@using TerraForums.Data.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TerraForums</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TerraForums.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand navLogo" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-controller="Forum" asp-action="Index">Forums</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" 
                                aria-haspopup="true" aria-expnaded="false">Settings
                                <span class="caret"></span>
                                <ul class="dropdown-menu">
                                    <li role="separator" class="divider"></li>
                                    <li class="dropdown-header">Profile</li>
                                        <li><a asp-controller="Profile" asp-action="Detail">My Profile</a></li>

 <!-- Admin menu options -->
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li role="separator" class="divider"></li>
                                            <li class="dropdown-header">Admin</li>
                                            <li><a asp-controller="Forum" asp-action="Create">Create Forum</a></li>
                                            <li><a asp-controller="Profile" asp-action="Index">View Users</a></li>
                                        }
                                    </ul>
                            </a>
                            </li>
                        }
                    </ul>

 <!-- Menu options for non-signed-in users -->
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <ul class="nav navbar-nar navbar-right">
                            <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Zaloguj</a></li>
                            <li class="active"><a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Rejestracja</a></li>
                        </ul>    
                    }

<!-- Menu options for signed-in users. -->
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar">
                            <ul class="nav navbar-nar navbar-right">
                                <li>Witaj, @UserManager.GetUserName(User)</li>
                                <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Logout" >Wyloguj</a></li>
                            </ul>
                        </form>
                    }
                   <!-- <partial name="_LoginPartial" /> -->
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TerraForums - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
