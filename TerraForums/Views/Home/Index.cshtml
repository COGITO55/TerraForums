@model TerraForums.Models.Home.HomeIndexModel

<div class="container-body">
    <div class="row frontPageSplash">
        <div class="col-md-6 frontPageLearn">
            <div class="frontPageHeading">Place Holder, Hold Places and Place the Holds</div>
            <p class="frontPageSubHeading">Prawidziwe forum dla terrorystów i hodowców egzotycznych zwierząt</p>
            <div>
                <form asp-controller="Search" asp-action="Search" method="post">
                    <input asp-for="SearchQuery" type="text" class="homeSearch" placeholder="Szukaj tematu..." />
                </form>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
    <div class="row frontPagecontent">
        <h3 id="latestPosts">Nowe wpisy</h3>
        <table class="table table-hover" id="latestPostsTable">
            <tbody>
                @foreach(var post in Model.LatestPosts)
                {
                    <tr>
                        <td>
                            <div class="forumLogo" style="bakcground-image: url(@post.Forum.ImageUrl); background-size=100%"></div>
                            <div class="PostTitle">
                                <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                                    @post.Title
                                </a>
                            </div>
                            <div class="PostSubtitle">
                                @if (post.RepliesCount == 1)
                                {
                                    <span>@post.RepliesCount Reply</span>    
                                }
                                @if (post.RepliesCount == 0)
                                {
                                    <span>No Replies</span>    
                                }
                                @if (post.RepliesCount > 1)
                                {
                                    <span>@post.RepliesCount Replies</span>
                                }
                                <span class="postUser">
                                    <a asp-controller="Profile" asp-action="Detail" asp-route-id="@post.AuthorId">
                                        @post.AuthorName
                                    </a>
                                 </span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>